<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinApp2.FormsAndSettings.TableViewPage">
    <RelativeLayout>
        <TableView Intent="Form">
            <TableRoot>
                <TableSection Title="Basicls">
                    <TextCell Text="Name" Detail="Ben Beni"/>
                    <EntryCell Label="Title" Placeholder="(eg Shopping)"/>
                    <SwitchCell Text="Notifications" On="True"/>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Padding="13, 0">
                            <Label Text="Starts" VerticalOptions="Center"/>
                            <DatePicker Date="1 Jul 2018" HorizontalOptions="EndAndExpand"/>
                        </StackLayout>
                    </ViewCell>
                </TableSection>
            </TableRoot>
        </TableView>
    </RelativeLayout>
</ContentPage>